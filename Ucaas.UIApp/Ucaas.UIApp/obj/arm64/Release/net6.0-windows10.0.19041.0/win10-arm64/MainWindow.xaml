<Window
    x:Class="Ucaas.UIApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ucaas.UIApp"
   
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" HorizontalAlignment="Stretch" 
                Height="50" CornerRadius="2"
                Background="Transparent" 
                BorderThickness="0 0 0 2" BorderBrush="LightGray">
            <StackPanel Orientation="Horizontal">
                <TextBox Text="" Margin="100 0 0 0" Width="200" PlaceholderText="Search" 
                         HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <Button BorderThickness="0" Margin="475 0 0 0">
                    <Button.Content>
                        <StackPanel  Margin="10 0 0 0" Orientation= "Horizontal">
                            
                            <Image Width="25" Height="25" Source="\Assets\Dialler.png" />
                            <TextBlock Text="Dialer" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button BorderThickness="0">
                    <Button.Content>
                       
                        <StackPanel   Orientation= "Horizontal">
                          
                            <Image Width="25"  Height="25" Source="\Assets\whatnew.png" />
                            <TextBlock Text="what's New" VerticalAlignment="Center"/>
                        </StackPanel>

                    </Button.Content>
                </Button>
                <Button BorderThickness="0">
                    <Button.Content>
                        <StackPanel   Orientation= "Horizontal">
                          
                            <Image Width="25" Height="25" Source="\Assets\Help.png" />
                            <TextBlock Text="Help" VerticalAlignment="Center"/>
                        </StackPanel>

                    </Button.Content>
                </Button>
            </StackPanel>

        </Border>

        <Grid Grid.Row="1" BorderThickness="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.Column="0" 
                Width="auto" CornerRadius="2"
                Background="Transparent" 
                BorderThickness="0 0 2 0" BorderBrush="LightGray">

                <StackPanel Orientation="Vertical"  >
                    <Button BorderThickness="0"    >
                        <Button.Content>
                            <StackPanel   Orientation= "Vertical">
                                <Image Width="50" Height="25" Source="\Assets\messages.png"  />
                                <TextBlock Text="Messages" HorizontalAlignment="Center" />
                            </StackPanel>
                        </Button.Content>
                        
                    </Button>
                    <Button BorderThickness="0">
                        <Button.Content>

                            <StackPanel  Orientation= "Vertical" >

                                <Image Width="50"  Height="25" Source="\Assets\calls.png" />
                                <TextBlock Text="Calls" HorizontalAlignment="Center"/>
                            </StackPanel>

                        </Button.Content>
                    </Button>
                    <Button BorderThickness="0">
                        <Button.Content>
                            <StackPanel   Orientation= "Vertical">
                                <Image Width="50" Height="25" Source="\Assets\meetings.png"  />
                                <TextBlock Text="Meetings" HorizontalAlignment="Center" />
                            </StackPanel>

                        </Button.Content>
                    </Button>
                    <Button BorderThickness="0">
                        <Button.Content>
                            <StackPanel   Orientation= "Vertical" >
                                <Image Width="50" Height="25" Source="\Assets\spaces.png" />
                                <TextBlock Text="Spaces"  HorizontalAlignment="Center" />
                            </StackPanel>

                        </Button.Content>
                    </Button>
                    <Button BorderThickness="0">
                        <Button.Content>
                            <StackPanel   Orientation= "Vertical">
                                <Image Width="50" Height="25" Source="\Assets\contacts.png"  />
                                <TextBlock Text="Contacts"  HorizontalAlignment="Center"/>
                            </StackPanel>

                        </Button.Content>
                    </Button>
                    <Button BorderThickness="0">
                        <Button.Content>
                            <StackPanel   Orientation= "Vertical" >
                                <Image Width="50" Height="25" Source="\Assets\more.png"  />
                                <TextBlock Text="More"  HorizontalAlignment="Center"/>
                            </StackPanel>

                        </Button.Content>
                    </Button>
                    <Button BorderThickness="0">
                        <Button.Content>
                            <StackPanel   Orientation= "Vertical" Margin="0 50 0 0" >
                                <Image Width="50" Height="50" Source="\Assets\settings.png"  />
                                <TextBlock Text="Settings"  HorizontalAlignment="Center"/>
                            </StackPanel>

                        </Button.Content>
                    </Button>
                </StackPanel>

            </Border>
            <Border Grid.Row="0" Grid.Column="1" 
                Width="250" CornerRadius="2"
                Background="Transparent" 
                BorderThickness="0 0 2 0" BorderBrush="LightGray"/>
            
        </Grid>
      

    </Grid>
    
</Window>

